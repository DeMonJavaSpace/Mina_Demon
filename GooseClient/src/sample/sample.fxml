      <Label fx:id="tvMac" layoutX="596.0" layoutY="73.0" text="Label" />
      <Label layoutX="355.0" layoutY="14.0" text="虚拟Mac" />
      <TextField fx:id="tfVirtualMac" layoutX="415.0" layoutY="10.0" prefHeight="23.0" prefWidth="330.0" promptText="虚拟Mac地址，模拟多客户端测试，不填则默认取本机Mac" />
