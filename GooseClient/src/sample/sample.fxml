      <TextField fx:id="tfMsg" layoutX="60.0" layoutY="70.0" prefHeight="23.0" prefWidth="376.0" promptText="发送消息内容，不能为空" />
      <Button fx:id="btnSend" layoutX="450.0" layoutY="69.0" mnemonicParsing="false" onAction="#btnSend" text="发送消息" />
